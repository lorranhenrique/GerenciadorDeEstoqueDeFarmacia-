<!DOCTYPE html>
<html lang="en">

<%- include ('./parciais/header.ejs')%>

<body>
    
    <%- include ('./parciais/nav.ejs')%>

    <ul>
        <li><a href="/menu" style="background: crimson; color:aliceblue; border-radius:5px 5px 5px;padding:5px;">MENU</a></li>
    </ul><br><br>
    
    <div class="produtos">
        <h2>Todos os Funcionários</h2>

        <% if (usuarios.length > 0){%>
        <% usuarios.forEach(usuarios => {%>
        <a class="single" href="/usuarios/<%= usuarios._id%>">
            <h3 class="title"><%= usuarios.nome %></h3>
            <p class="quantidade"> Cargo: <%=usuarios.cargo%></p><br>
        </a>
        <%})%>
        <%}else{%>
        <p>Nenhum Funcionário contratado</p>
            <%}%>

    </div>

    
    <%- include('./parciais/footer.ejs')%>

</body>
</html>